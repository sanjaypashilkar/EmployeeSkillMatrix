@model SkillMatrix.Model.Pager

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end" style="cursor:pointer">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" onclick="Paginate(1)">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="Paginate(@(Model.CurrentPage-1))">Previous</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage? "active": "")">
                    <a class="page-link" onclick="Paginate(@pge)">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" onclick="Paginate(@(Model.CurrentPage+1))">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="Paginate(@(Model.EndPage))">Last</a>
                </li>
            }
        </ul>
    }
</div>